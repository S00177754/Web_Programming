@page
@model LabTwo.Pages.htmlvalidationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HTML Validation</title>
    <link href="~/main.css" rel="stylesheet" />
</head>

<body>
    <form method="get" novalidate>
        
        <label for="studentNumber">Student Number:</label>
        <input class="numberBoxes" type="text" name="studentNumber" id="studentNumber" pattern="[Ss]\d{8}"
               minlength="9" maxlength="9" size="9" placeholder="StudentNumber" required />

        <section id="numberSection">
            <label for="numberA">Number A:</label>
            <input class="numberBoxes" type="number" step="1" id="numberA" name="numberA" />
            
            <label for="numberB">Number B:</label>
            <input class="numberBoxes" type="number" step="1" min="-10" max="10" size="2" id="numberB" name="numberB" />
           
            <label for="numberC">Number C:</label>
            <input class="numberBoxes" type="number" step="0.01" min="0" id="numberC" name="numberC" />
        </section>

        <button type="submit" value="submit">Press Me</button>
    </form>
</body>

</html>
